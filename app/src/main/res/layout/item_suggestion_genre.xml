<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:background="@color/softBlue"

    android:paddingStart="@dimen/_10dp"
    android:paddingEnd="@dimen/_10dp"
    android:paddingBottom="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView style="@style/AdditionalDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_8dp"

            android:text="@string/fancy_some"
            android:textStyle="italic"/>

        <TextView style="@style/AdditionalDarkTextView"
            android:id="@+id/similarGenreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_4dp"

            tools:text="Hard Rock"
            android:textStyle="bold"/>

        <TextView style="@style/AdditionalDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_4dp"

            tools:text="@string/question_mark"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView style="@style/CustomCardView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stackedSuggestionAlbums"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/_10dp"

            tools:listitem="@layout/item_three_albums"
            tools:itemCount="1"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>