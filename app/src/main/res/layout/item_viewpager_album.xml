<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@android:color/transparent"
    tools:background="@color/softBlue"

    android:layout_marginEnd="@dimen/view_pager_item_margin_between">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="8dp"
        android:clipToPadding="true">

            <ImageView
                android:id="@+id/artwork"
                android:layout_width="@dimen/view_pager_item_height"
                android:layout_height="@dimen/view_pager_item_height"

                android:src="@drawable/gorillaz"

                android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/albumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:textColor="@color/plainWhite"
            android:textStyle="bold"

            android:text="Feeling Good Inc."/>

        <TextView
            android:id="@+id/bandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"

            android:text="Gorillaz"
            android:textColor="@color/lightGrey"/>

    </LinearLayout>

</LinearLayout>