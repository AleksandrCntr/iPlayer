<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:background="@color/softBlue"

    android:paddingStart="@dimen/_10dp"
    android:paddingEnd="@dimen/_10dp"
    android:paddingBottom="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView style="@style/AdditionalDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_8dp"

            android:text="@string/similar_to"
            android:textStyle="italic"/>

        <TextView style="@style/AdditionalDarkTextView"
            android:id="@+id/similarBandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text=" Daft Punk"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView style="@style/CustomCardView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/item_single_album_song_bg">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:layout_marginStart="@dimen/_10dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/gorillaz"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/album_part"

                android:layout_marginStart="-28dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:layout_weight="1"
                android:gravity="center_vertical"

                android:layout_marginStart="-17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4dp"

                    tools:text="Feel Good Inc."
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4dp"

                    tools:text="Gorillaz, 2020"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4dp"

                    tools:text="12 tracks"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:layout_marginEnd="@dimen/_20dp"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/ic_play_arrow_grey_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/play_all"
                    android:textAllCaps="true"
                    android:textSize="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>