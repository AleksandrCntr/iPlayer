<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AdditionalDarkTextView" parent="TextAppearance.AppCompat">
        <item name="android:lines">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/plainWhite</item>
    </style>

    <style name="SingleLineTextView" parent="TextAppearance.AppCompat">
        <item name="android:lines">1</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/greyishGrey</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CustomCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
    </style>

</resources>
